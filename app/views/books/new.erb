<h1>Add a new book</h1>

<% if flash.has?(:message) %>
  <h3><%= flash[:message] %></h3>
<% end %>

<form method="post" action="/books">
  <label for="title">Title</label>
  <input style="display: block;" type="text" id="title" name="book[title]" value="<%= @title %>"/>

  <label for="email">Author</label>
  <input style="display: block;" type="text" id="email" name="book[author]" value="<%= @author %>"/>

  <label for="genre">Genre</label>
  <input style="display: block;" type="text" id="genre" name="book[genre]" value="<%= @genre %>"/>

  <label for="level">Guided Reading Level</label>
  <input style="display: block;" type="text" id="level" name="book[guided_reading_level]" value="<%= @level %>"/>

  <button class="button" type="submit">Submit</button>

</form>
