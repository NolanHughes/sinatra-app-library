<h1>Edit <%= @book.title %></h1>

<form method="post" action="/books/<%= @book.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <label for="title">Title:</label>
  <input style="display: block;" type="text" id="title" name="book[title]" value="<%= @book.title %>"/>

  <label for="email">Author:</label>
  <input style="display: block;" type="text" id="email" name="book[author]" value="<%= @book.author %>" />

  <label for="genre">Genre:</label>
  <input style="display: block;" type="text" id="genre" name="book[genre]" value="<%= @book.genre %>" />

  <label for="level">Guided Reading Level:</label>
  <input style="display: block;" type="text" id="level" name="book[guided_reading_level]" value="<%= @book.guided_reading_level %>" />

  <button style="display: block;" type="submit">Submit</button>

</form>
