<h1>Edit <%= @book.title %></h1>

<% if flash.has?(:message) %>
  <h3><%= flash[:message] %></h3>
<% end %>

<form method="post" action="/books/<%= @book.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="title">Title</label>
  <input type="text" id="title" name="book[title]" value="<%= @title %>"/>

  <label for="email">Author</label>
  <input type="text" id="email" name="book[author]" value="<%= @author %>" />

  <label for="genre">Genre</label>
  <input type="text" id="genre" name="book[genre]" value="<%= @genre %>" />

  <label for="level">Guided Reading Level</label>
  <input type="text" id="level" name="book[guided_reading_level]" value="<%= @level %>" />

  <label for="quantity">Quantity</label>
  <input type="text" id="quantity" name="book[quantity]" value="<%= @quantity %>" />

  <button class="button" type="submit">Submit</button>

</form>
