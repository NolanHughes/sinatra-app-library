<h1>Welcome, <%= current_user.username %></h1>

<a href="/books/new">Add a new book to your library</a>

<% if flash.has?(:message) %>
  <h3><%= flash[:message] %></h3>
<% end %>

<h3>Filter by Guided Reading Level or Genre</h3>

<form method="post" action="/books/filter">
  <label style="display: block;" for="level">Level:</label>
  <input type="text" name="level" />

  <button type="submit">Filter</button>

  <label style="display: block;" for="genre">Genre:</label>
  <input type="text" name="genre" />

  <button type="submit">Filter</button>
</form>
