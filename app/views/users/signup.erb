<h1>Sign Up Page</h1>

<% if flash.has?(:message) %>
  <h3><%= flash[:message] %></h3>
<% end %>

<form method="post" action="/users/signup">
  <label for="username">Username:</label>
  <input style="display: block;" type="text" id="username" name="user[username]"/>

  <label for="email">Email:</label>
  <input style="display: block;" type="text" id="email" name="user[email]" />

  <label for="password">Password: (Must be at least 8 characters, have an upper and lower case letter, and a number)</label>
  <input style="display: block;" type="text" id="password" name="user[password]" />

  <button style="display: block;" type="submit">Submit</button>

</form>
