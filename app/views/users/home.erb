<h1>Welcome, <%= current_user.username %></h1>

<% if current_user.books == [] %>
  <h3>You have no books in your library</h3>
<% else %>
  <h3>Here are all of the book in your library</h3>
  <ol>
    <% current_user.books.each do |book| %>
    <li><a href="/books/<%= book.id %>"><%= book.title %></a></li>
    <ul>
      <li>Author: <%= book.author %></li>
      <li>Genre: <%= book.genre %></li>
      <li>Guided Reading Level: <%= book.guided_reading_level %></li>
    </ul>
    <% end %>
  </ol>
<% end %>

<h3>Filter by Guided Reading Level or Genre</h3>

<% if flash.has?(:message) %>
  <h3><%= flash[:message] %></h3>
<% end %>

<form method="post" action="/books/filter">
  <label style="display: block;" for="level">Level:</label>
  <input type="text" name="level" />

  <button type="submit">Filter</button>

  <label style="display: block;" for="genre">Genre:</label>
  <input type="text" name="genre" />

  <button type="submit">Filter</button>
</form>

<a href="/users/logout" style="display: block;">Log Out</a>
